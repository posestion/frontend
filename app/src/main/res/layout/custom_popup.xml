<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="122dp"
    android:layout_height="wrap_content"
    android:background="@drawable/solid_maincolor_6dp"
    android:orientation="vertical">

    <View
        android:id="@+id/cpopup_view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_delete" />

    <ImageView
        android:id="@+id/cpopup_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/popup_edit"
        app:layout_constraintStart_toStartOf="@+id/cpopup_image1"
        app:layout_constraintTop_toTopOf="@+id/popup_edit"
        app:srcCompat="@drawable/svg_edit" />

    <View
        android:id="@+id/cpopup_view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_edit" />

    <ImageView
        android:id="@+id/cpopup_image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/popup_keep"
        app:layout_constraintStart_toStartOf="@+id/cpopup_image2"
        app:layout_constraintTop_toTopOf="@+id/popup_keep"
        app:srcCompat="@drawable/svg_keep" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/popup_delete"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/solid_transparent"
        android:gravity="start|center_vertical"
        android:text="글 삭제"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/popup_edit"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/solid_transparent"
        android:gravity="start|center_vertical"
        android:text="글 편집"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/popup_delete"
        app:layout_constraintTop_toBottomOf="@+id/cpopup_view1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/popup_keep"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/solid_transparent"
        android:gravity="start|center_vertical"
        android:text="글 보관"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/popup_edit"
        app:layout_constraintTop_toBottomOf="@+id/cpopup_view2" />

    <ImageView
        android:id="@+id/cpopup_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/popup_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/popup_delete"
        app:srcCompat="@drawable/svg_delete2" />
</androidx.constraintlayout.widget.ConstraintLayout>