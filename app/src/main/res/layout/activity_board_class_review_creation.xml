<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".board_class_review_creation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/board_class_review_creation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="수강후기쓰기"
            android:textSize="14sp"
            android:textColor="@color/basic"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="11dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="9dp">

            <ImageButton
                android:id="@+id/board_class_review_creation_star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/classreview_empty_star"
                android:layout_marginRight="15dp"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/board_class_review_creation_star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/classreview_empty_star"
                android:layout_marginRight="15dp"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/board_class_review_creation_star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/classreview_empty_star"
                android:layout_marginRight="15dp"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/board_class_review_creation_star4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/classreview_empty_star"
                android:layout_marginRight="15dp"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/board_class_review_creation_star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/classreview_empty_star"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <EditText
            android:id="@+id/board_class_review_creation_content"
            android:layout_width="384dp"
            android:layout_height="300dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/textbox_shape"
            android:gravity="top"
            android:padding="12dp"
            android:text="수강후기를 남겨주세요!"
            android:textColor="@color/deepgray"
            android:textSize="12sp" />

        <Button
            android:id="@+id/board_class_review_creation_upload_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="64dp"
            android:backgroundTint="@color/maincolor"
            android:text="등록하기"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/sf_arabic_rounded"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>