<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/mypage_rv_contents_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:maxLength="20"
        android:maxLines="1"
        android:text="title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mypage_rv_contents_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="text"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/mypage_rv_contents_title"
        app:layout_constraintTop_toBottomOf="@+id/mypage_rv_contents_title" />

    <ImageView
        android:id="@+id/mypage_rv_contents_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mypage_rv_contents_text"
        app:layout_constraintTop_toBottomOf="@+id/mypage_rv_contents_text"
        app:srcCompat="@drawable/svg_empty_heart" />

    <ImageView
        android:id="@+id/mypage_rv_contents_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/mypage_rv_contents_image1"
        app:layout_constraintStart_toEndOf="@+id/mypage_rv_contents_image1"
        app:layout_constraintTop_toTopOf="@+id/mypage_rv_contents_image1"
        app:srcCompat="@drawable/svg_talk" />

    <ImageView
        android:id="@+id/mypage_rv_contents_image_main"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/corners_5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/mypage_rv_contents_text_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="100k"
        android:textColor="@color/gray"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/mypage_rv_contents_image1"
        app:layout_constraintStart_toEndOf="@+id/mypage_rv_contents_image1"
        app:layout_constraintTop_toTopOf="@+id/mypage_rv_contents_image1" />

    <TextView
        android:id="@+id/mypage_rv_contents_text_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="5"
        android:textColor="@color/gray"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/mypage_rv_contents_image2"
        app:layout_constraintStart_toEndOf="@+id/mypage_rv_contents_image2"
        app:layout_constraintTop_toTopOf="@+id/mypage_rv_contents_image2" />

</androidx.constraintlayout.widget.ConstraintLayout>