<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Start">

    <TextView
        android:id="@+id/AStart_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나만을 위한,"
        android:textColor="#767676"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/AStart_title"
        app:layout_constraintStart_toStartOf="@+id/AStart_title"
        app:layout_constraintTop_toBottomOf="@+id/AStart_title" />

    <TextView
        android:id="@+id/AStart_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진 포즈 가이드"
        android:textColor="#767676"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/AStart_text1"
        app:layout_constraintStart_toStartOf="@+id/AStart_text1"
        app:layout_constraintTop_toBottomOf="@+id/AStart_text1" />

    <Button
        android:id="@+id/AStart_btn_start"
        android:layout_width="309dp"
        android:layout_height="54dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/button_shape"
        android:text="시작하기"
        android:textColor="@color/main_string_color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/AStart_title"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/amatica_sc_bold"
        android:text="POSESTION"
        android:textColor="@color/main_color"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>