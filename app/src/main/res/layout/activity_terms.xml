<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activityterms">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Aterms_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/login_menu">

        <TextView
            android:id="@+id/Aterms_bartitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="약관 동의"
            android:textColor="@color/basic"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="16dp" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="341dp"
        android:id="@+id/constraintLayout"
        android:layout_width="328dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/box_line_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/Aterms_check1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:button="@drawable/terms_checkbox"
            android:gravity="center_vertical|end"
            android:paddingStart="5dp"
            android:text="약관 전체 동의"
            android:textColor="@color/deepgray"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/Aterms_check2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:button="@drawable/terms_checkbox"
            android:gravity="center_vertical|end"
            android:paddingStart="5dp"
            android:text="[필수] 이용약관에 동의합니다."
            android:textColor="@color/deepgray"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Aterms_check1" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/Aterms_check3"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:button="@drawable/terms_checkbox"
            android:gravity="center_vertical|end"
            android:paddingStart="5dp"
            android:text="[필수] 개인정보 수집 및 이용에 동의합니다."
            android:textColor="@color/deepgray"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Aterms_check2" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/Aterms_check4"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:button="@drawable/terms_checkbox"
            android:gravity="center_vertical|end"
            android:paddingStart="5dp"
            android:text="[필수] 만 14세 이상입니다."
            android:textColor="@color/deepgray"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Aterms_check3" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/Aterms_check5"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:button="@drawable/terms_checkbox"
            android:gravity="center_vertical|end"
            android:paddingStart="5dp"
            android:text="[필수] 마켓팅 활용 및 광고성 정보 수신 동의"
            android:textColor="@color/deepgray"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Aterms_check4" />

        <TextView
            android:id="@+id/Aterms_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="보기"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/Aterms_check2"
            app:layout_constraintStart_toEndOf="@+id/Aterms_check2"
            app:layout_constraintTop_toTopOf="@+id/Aterms_check2" />

        <TextView
            android:id="@+id/Aterms_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="보기"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/Aterms_check3"
            app:layout_constraintStart_toEndOf="@+id/Aterms_check3"
            app:layout_constraintTop_toTopOf="@+id/Aterms_check3" />

        <TextView
            android:id="@+id/Aterms_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="33dp"
            android:text="만 14세 미만은 법적 대리인의 동의가 필요합니다."
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/Aterms_check4"
            app:layout_constraintTop_toTopOf="@+id/Aterms_check4" />

        <TextView
            android:id="@+id/Aterms_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="33dp"
            android:text="다양한 이벤트 및 POSESTION의 소식을\n빠르게 받아볼 수 있습니다."
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/Aterms_check5"
            app:layout_constraintTop_toTopOf="@+id/Aterms_check5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Aterms_btn"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/button_shape"
        android:text="가입하기"
        android:textColor="@color/deepgray"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Aterms_toolbar">

        <TextView
            android:id="@+id/Aterms_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약관 동의"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Aterms_text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   >   ID / PW 생성   >   프로필 생성"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Aterms_text5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>