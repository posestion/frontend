<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".board_home_page">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/board_home_tensec_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 찍기 고민될 땐, 10초 사진"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/maincolor"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ten_sec_photo"
                        android:layout_marginLeft="16dp"/>
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ten_sec_photo"/>

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ten_sec_photo" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ten_sec_photo"/>
                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ten_sec_photo"
                        android:layout_marginRight="16dp"
                        />
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/board_home_listpage_title"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="이사잘?"
                    android:textColor="@color/maincolor"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp"
                    android:textStyle="bold"
                    />

                <Button
                    android:id="@+id/board_home_listpage_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:includeFontPadding="false"
                    android:text="전체보기 >"
                    android:textColor="@color/deepgray"
                    android:textSize="12sp" />

            </LinearLayout>

            <Button
                android:id="@+id/master_list_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="master list" />

            <Button
                android:id="@+id/creation_page_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="creation page" />

            <Button
                android:id="@+id/class_review_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="class_review" />

            <Button
                android:id="@+id/class_creation_page_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="class_creation_page" />

            <Button
                android:id="@+id/hotclass_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hotclass" />

            <Button
                android:id="@+id/basic_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="basic" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>