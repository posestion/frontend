<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/sf_arabic_rounded"
        android:gravity="center"
        android:text="필터"
        android:textColor="@color/maincolor"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="316dp"
        android:fontFamily="@font/sf_arabic_rounded"
        android:text="정렬"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radio_graphics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="16dp"
        android:checkedButton="@id/radioButton_medium"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/radioButton_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:fontFamily="@font/sf_arabic_rounded"
            android:text="추천순"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/radioButton_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:fontFamily="@font/sf_arabic_rounded"
            android:text="인기순"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/radioButton_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:fontFamily="@font/sf_arabic_rounded"
            android:text="최신순"
            android:textSize="15dp" />
    </RadioGroup>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:text="결과 내 재검색"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="403dp"
        android:layout_marginEnd="16dp"
        android:textSize="12dp"
        android:fontFamily="@font/sf_arabic_rounded"
        android:background="@drawable/bg_white_rounded"
        android:drawableRight="@drawable/baseline_search_24"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/radio_graphics4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="442dp"
        android:layout_marginEnd="16dp"
        android:checkedButton="@id/radioButton_medium"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButton_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:fontFamily="@font/amatica_sc"
            android:text="포함"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/radioButton_2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:fontFamily="@font/amatica_sc"
            android:text="제외"
            android:textSize="15dp"/>

    </RadioGroup>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_profile"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/sf_arabic_rounded"
        android:text="+옆모습"
        android:textColor="@color/gray"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/button_object"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_graphics4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_object"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/sf_arabic_rounded"
        android:text="+사물"
        android:textColor="@color/gray"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@+id/button_tel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_profile"
        app:layout_constraintTop_toBottomOf="@+id/radio_graphics4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_tel"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="58dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/sf_arabic_rounded"
        android:text="+전화기"
        android:textColor="@color/gray"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_object"
        app:layout_constraintTop_toBottomOf="@+id/radio_graphics4" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_save"
        android:layout_width="87dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/round_button2"
        android:fontFamily="@font/sf_arabic_rounded"
        android:text="초기화"
        android:textColor="@color/gray"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/button_load"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_tel" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_load"
        android:layout_width="227dp"
        android:layout_height="42dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_button3"
        android:fontFamily="@font/sf_arabic_rounded"
        android:text="385개 결과보기"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_tel" />


</androidx.constraintlayout.widget.ConstraintLayout>