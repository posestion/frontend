<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="122dp"
    android:layout_height="wrap_content"
    android:background="@drawable/solid_maincolor_6dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cpopupclass_delete"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/solid_transparent"
        android:gravity="start|center_vertical"
        android:text="강의 삭제"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/cpopupclass_view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/cpopupclass_delete"
        tools:layout_editor_absoluteX="5dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cpopupclass_edit"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/solid_transparent"
        android:gravity="start|center_vertical"
        android:text="강의 편집"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/cpopupclass_delete"
        app:layout_constraintTop_toBottomOf="@+id/cpopupclass_view1" />

    <ImageView
        android:id="@+id/cpopupclass_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/cpopupclass_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cpopupclass_delete"
        app:srcCompat="@drawable/svg_delete2" />

    <ImageView
        android:id="@+id/cpopupclass_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/cpopupclass_edit"
        app:layout_constraintStart_toStartOf="@+id/cpopupclass_image1"
        app:layout_constraintTop_toTopOf="@+id/cpopupclass_edit"
        app:srcCompat="@drawable/svg_edit" />

    <View
        android:id="@+id/cpopupclass_view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/cpopupclass_edit"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cpopupclass_keep"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/solid_transparent"
        android:gravity="start|center_vertical"
        android:text="강의 보관"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cpopupclass_delete"
        app:layout_constraintTop_toBottomOf="@+id/cpopupclass_view2" />

    <ImageView
        android:id="@+id/cpopupclass_image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/cpopupclass_keep"
        app:layout_constraintTop_toTopOf="@+id/cpopupclass_keep"
        app:srcCompat="@drawable/svg_keep"
        tools:layout_editor_absoluteX="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>