<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/Rvclass_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Rvclass_card"
        app:srcCompat="@drawable/svg_heart" />

    <ImageView
        android:id="@+id/Rvclass_card"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/solid_basic_7dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Rvclass_title"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="TextView"
        android:textSize="10sp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/Rvclass_image"
        app:layout_constraintStart_toEndOf="@+id/Rvclass_image"
        app:layout_constraintTop_toTopOf="@+id/Rvclass_image" />

    <ImageButton
        android:id="@+id/Rvclass_btn"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:background="@drawable/solid_transparent"
        app:layout_constraintEnd_toEndOf="@+id/Rvclass_card"
        app:layout_constraintTop_toTopOf="@+id/Rvclass_card"
        app:srcCompat="@drawable/svg_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>