            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="17dp">

                <ImageView
                    android:id="@+id/board_contents_view_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/contents_view_empty_heart"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/board_contents_view_heart_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginLeft="3dp"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:textColor="@color/deepgray"/>

                <ImageView
                    android:id="@+id/board_contents_view_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/contents_view_comment"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/board_contents_view_comment_num"
                    android:layout_width="wrap_content"
