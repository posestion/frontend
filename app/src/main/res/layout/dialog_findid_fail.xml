<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dfindid_fail">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/failconst2"
        android:layout_width="330dp"
        android:layout_height="85dp"
        android:background="@drawable/customdialog_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/failconst">

        <TextView
            android:id="@+id/dfindid_fail_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="존재하지 않는"
            android:textColor="@color/deepgray"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/dfindid_fail_text3"
            app:layout_constraintEnd_toStartOf="@+id/dfindid_fail_text2"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dfindid_fail_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 회원 정보입니다."
            android:textColor="@color/deepgray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dfindid_fail_text1"
            app:layout_constraintTop_toTopOf="@+id/dfindid_fail_text1" />

        <TextView
            android:id="@+id/dfindid_fail_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서비스 이용을 원하시면"
            android:textColor="@color/deepgray"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dfindid_fail_text4"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dfindid_fail_text1" />

        <TextView
            android:id="@+id/dfindid_fail_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 회원가입"
            android:textColor="@color/deepgray"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/dfindid_fail_text5"
            app:layout_constraintStart_toEndOf="@+id/dfindid_fail_text3"
            app:layout_constraintTop_toTopOf="@+id/dfindid_fail_text3" />

        <TextView
            android:id="@+id/dfindid_fail_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="을 해주세요."
            android:textColor="@color/deepgray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dfindid_fail_text4"
            app:layout_constraintTop_toTopOf="@+id/dfindid_fail_text4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/failconst"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toTopOf="@+id/failconst2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageButton
            android:id="@+id/dfindid_fail_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/dialogbtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>