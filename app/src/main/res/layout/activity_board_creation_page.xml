<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".board_creation_page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="57dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="0.1"
                    app:srcCompat="@drawable/vector_3"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9.9"
                    android:text="이 사진 잘 나옴?       "
                    android:textColor="@color/maincolor"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <TextView
                android:id="@+id/board_creation_title_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sf_arabic_rounded"
                android:text="제목"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/board_creation_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="제목을 입력해주세요."
                android:textSize="12sp"
                android:maxLength="800"
                android:textColor="@color/deepgray"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:textColorHint="#D9D9D9"
                android:backgroundTint="#EDEDED"
                />

            <TextView
                android:id="@+id/board_creation_photo_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sf_arabic_rounded"
                android:text="구도가 잘 보이는 사진을 올려주세요"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/board_creation_photobox"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:srcCompat="@drawable/creation_page_imageview"
                android:backgroundTint="@color/white"/>




            <TextView
                android:id="@+id/board_creation_content_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/sf_arabic_rounded"
                android:text="내용을 작성해주세요 (선택)"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/board_creation_content"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/textbox_shape"
                android:gravity="top"
                android:padding="12dp"
                android:hint="다른 사람들에게 사진을 소개해주세요"
                android:textColor="@color/deepgray"
                android:textColorHint="@color/gray"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">

                <TextView
                    android:id="@+id/board_creation_contentcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/sf_arabic_rounded"
                    android:gravity="right"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:text="0" />

                <TextView
                    android:id="@+id/board_creation_contentmax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/sf_arabic_rounded"
                    android:gravity="right"
                    android:text="/800"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <Button
                android:id="@+id/board_creation_upload_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="29dp"
                android:backgroundTint="@color/maincolor"
                android:text="등록하기"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/sf_arabic_rounded"
                />

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>