<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="122dp"
    android:layout_height="wrap_content"
    android:background="@drawable/solid_maincolor_6dp">

    <View
        android:id="@+id/cboxpopup_view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/cboxpopup_btn_delete"
        tools:layout_editor_absoluteX="-5dp" />

    <ImageView
        android:id="@+id/cboxpopup_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/cboxpopup_btn_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cboxpopup_btn_delete"
        app:srcCompat="@drawable/svg_delete2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cboxpopup_btn_delete"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/solid_transparent"
        android:gravity="start|center_vertical"
        android:text="게시물 삭제"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cboxpopup_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/cboxpopup_btn_out"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cboxpopup_btn_out"
        app:srcCompat="@drawable/svg_keep" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cboxpopup_btn_out"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/solid_transparent"
        android:gravity="start|center_vertical"
        android:text="게시물 꺼내기"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cboxpopup_btn_delete"
        app:layout_constraintTop_toBottomOf="@+id/cboxpopup_view1" />
</androidx.constraintlayout.widget.ConstraintLayout>